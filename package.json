{
  "name": "engram-harness",
  "version": "0.1.3",
  "description": "Engram â€” The AI Harness for Everyone. Personal AI infrastructure that turns any model into your AI.",
  "type": "module",
  "bin": {
    "engram": "dist/cli.js"
  },
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target node && bun run build:fix-shebang && bun run build:hooks",
    "build:cli": "bun build src/cli.ts --outdir dist --target node && bun run build:fix-shebang",
    "build:fix-shebang": "node -e \"const f=require('fs');const p='dist/cli.js';let c=f.readFileSync(p,'utf-8');c=c.replace(/^#!.*\\n/,'#!/usr/bin/env node\\n');f.writeFileSync(p,c);f.chmodSync(p,0o755)\"",
    "build:hooks": "bun run scripts/build-hooks.ts",
    "dev": "bun run src/cli.ts",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist/",
    "hooks/",
    "skills/",
    "templates/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@inquirer/prompts": "^7.0.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "commander": "^13.0.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Percival-Labs/engram.git"
  },
  "keywords": [
    "ai",
    "infrastructure",
    "cli",
    "claude-code",
    "personal-ai",
    "engram",
    "ai-assistant"
  ],
  "engines": {
    "node": ">=20.0.0"
  }
}
